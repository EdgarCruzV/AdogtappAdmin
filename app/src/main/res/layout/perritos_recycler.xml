<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#B3B3B3"
android:id="@+id/layout_perritos_recycler">

    <ImageView

            android:id="@+id/foto_perritos_recycler"
            android:layout_width="120dp"
            android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher"/>


    <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Nombre"
                    android:id="@+id/nombre_perritos_recycler"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/genero_perritos_recycler"
                    android:text="GÃ©nero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/edad_perritos_recycler"
                    android:text="Edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/talla_perritos_recycler"
                    android:text="Talla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:id="@+id/contacto_perritos_recycler"
                    android:text="Contacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:id="@+id/descripcion_perritos_recycler"
                    android:text="Descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>