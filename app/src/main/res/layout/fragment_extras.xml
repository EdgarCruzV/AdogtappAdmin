<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MenuFragments.Extras">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".MainActivity">

        <EditText
                android:id="@+id/articulo_extras"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Nombre del Artículo"
                android:paddingLeft="16dp"
                android:inputType="textCapWords"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/extras_foto_button"/>

        <EditText
                android:id="@+id/marca_extras"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Marca"
                android:inputType="text"
                android:paddingLeft="16dp"
                app:layout_constraintEnd_toEndOf="@+id/articulo_extras"
                app:layout_constraintStart_toStartOf="@+id/articulo_extras"
                app:layout_constraintTop_toBottomOf="@+id/articulo_extras" />

        <EditText
                android:id="@+id/cantidad_extras"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Cantidad. Ej: 2"
                android:inputType="textCapWords"
                android:paddingLeft="16dp"
                app:layout_constraintEnd_toEndOf="@+id/marca_extras"
                app:layout_constraintStart_toStartOf="@+id/marca_extras" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/marca_extras"/>
        <EditText
                android:id="@+id/precio_extras"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Precio"
                android:inputType="number"
                android:paddingLeft="16dp"
                app:layout_constraintEnd_toEndOf="@+id/cantidad_extras"
                app:layout_constraintStart_toStartOf="@+id/cantidad_extras" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cantidad_extras"/>

        <EditText
                android:id="@+id/descripcion_extras"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Descripción. Ej: Pelota de tela."
                android:inputType="textCapSentences"
                android:paddingLeft="16dp"
                app:layout_constraintStart_toStartOf="@+id/precio_extras"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/precio_extras"
                app:layout_constraintTop_toBottomOf="@+id/precio_extras"/>

        <Button
                android:id="@+id/registrar_extras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Registrar Artículo"
                app:layout_constraintEnd_toEndOf="@+id/descripcion_extras"
                app:layout_constraintStart_toStartOf="@+id/descripcion_extras"
                app:layout_constraintTop_toBottomOf="@+id/descripcion_extras" app:layout_constraintHorizontal_bias="0.0"
        />


        <de.hdodenhof.circleimageview.CircleImageView
                android:text="Button"

                app:civ_border_width="4dp"

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/redonditos_register_photo_button"

                android:id="@+id/extras_foto_button" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.497"/>
        <ImageView
                android:layout_width="69dp"
                android:layout_height="62dp" app:srcCompat="@android:drawable/ic_input_add"
                android:id="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/extras_foto_button"
                app:layout_constraintBottom_toBottomOf="@+id/extras_foto_button"
                app:layout_constraintStart_toStartOf="@+id/extras_foto_button"
                app:layout_constraintEnd_toEndOf="@+id/extras_foto_button"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="Click para añadir foto del artículo"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/textView3" android:textSize="12sp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintBottom_toTopOf="@+id/articulo_extras"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.105"
                android:textColor="@android:color/tertiary_text_light"
                app:layout_constraintHorizontal_bias="0.272"/>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>